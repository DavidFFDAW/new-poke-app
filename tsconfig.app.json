{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "types": ["node"],
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"],
            "@components/*": ["components/*"],
            "@services/*": ["services/*"],
            "@pages/*": ["pages/*"],
            "@assets/*": ["assets/*"],
            "@types/*": ["@types/*"]
        }
    },
    "include": ["src"]
}
